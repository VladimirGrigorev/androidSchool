<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:id="@+id/fl_add_post"
                                             tools:context="com.example.master.Fragments.AddMemeFragment"
                                             android:background="@color/colorBody">

    <android.support.v7.widget.Toolbar
            style="@style/Toolbar"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:theme="?attr/actionBarTheme"
            android:minHeight="?attr/actionBarSize"
            android:id="@+id/toolbarAddPost" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:title=" " android:gravity="center"
            android:foregroundGravity="center_vertical"/>
    <ImageButton
            android:adjustViewBounds="true"
            android:layout_width="40dp"
            android:layout_height="40dp" app:srcCompat="@drawable/baseline_clear_24"
            android:id="@+id/imageButtonCloseAddMeme"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="14dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="12dp" android:layout_marginStart="12dp" android:background="@color/colorCell"/>
    <Button
            android:stateListAnimator="@null"
            android:text="@string/create"
            android:layout_width="79dp"
            android:layout_height="39dp"
            android:id="@+id/buttonCreateMeme" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="15dp" android:layout_marginEnd="16dp" android:layout_marginRight="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:background="@color/colorCell"
            android:textColor="@color/colorPrimary" android:enabled="false"/>

    <android.support.design.widget.TextInputLayout
            app:counterEnabled="true"
            app:counterMaxLength="140"
            android:id="@+id/textInputTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/toolbarAddPost">

        <android.support.design.widget.TextInputEditText
                android:id="@+id/textInputEditTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/title"
                android:background="@color/colorBody" android:textSize="24sp"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
            app:counterEnabled="true"
            app:counterMaxLength="1000"
            android:id="@+id/textInputText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/textInputTitle" app:layout_constraintHorizontal_bias="0.0">

        <android.support.design.widget.TextInputEditText
                android:id="@+id/textInputEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/text"
                android:background="@color/colorBody"/>
    </android.support.design.widget.TextInputLayout>
    <com.example.master.RoundRectCornerConstraintLayout
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/selector_rounded"
            android:id="@+id/fl_container"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginRight="24dp"
            app:layout_constraintEnd_toEndOf="parent">
        <ImageButton
                app:srcCompat="@drawable/union"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/imageButtonInputImage" android:layout_marginEnd="16dp" android:layout_marginRight="16dp"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="16dp" android:adjustViewBounds="true" android:background="@color/colorCell"
                android:scaleType="fitCenter"/>
    </com.example.master.RoundRectCornerConstraintLayout>
    <ImageView
            android:layout_width="0dp"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:layout_height="wrap_content"
            android:id="@+id/imageViewAddMeme"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/textInputText"/>
    <TextView
            android:text="Создать свой мем"
            android:layout_width="202dp"
            android:layout_height="40dp"
            android:id="@+id/textViewTitleToolbar" android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF" android:textSize="22sp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="104dp" android:layout_marginStart="104dp"/>

</android.support.constraint.ConstraintLayout>